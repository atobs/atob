    <div class="logo lfloat">
      <div class="clearfix" style="position: relative;">
        <a href="/" class="">
          <img src="/images/atobn.png" style="width: 100px; height: 100px; margin-top: -20px; margin-left: -10px; border-style: none" class="lfloat" />
          <div class='burtle_tripcode tripcode' data-tripcode=<%= tripcode %>> </div>

        </a>

      </div>
    </div>
    <h1 class="lfloat">a to b</h1>
    <% if (show_search) { %>
      <%= render_partial("shared/search.html.erb") %>
    <% } %>
  </div>
  <small class="lfloat" style="font-style: italic;"> <%= slogan %> </small>






  <%= show_hr ? "<hr />" : "" %>
</div>

