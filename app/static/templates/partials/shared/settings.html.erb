<% add_stylesheet("settings.css") %>

<div class="col-sm-12 col-md-12 collapse settings clearfix mtl mbl" style="background-color: #eaeaea">
  <h2 class="identity">identity </h2>
  <div class="beeper lfloat mbl">
    beep me
  </div>

  <input name="handle" class="form-control handle" type="text" placeholder="handle" value="anon" />
  <div class="mtl"> </div>
  <input name="tripcode" class="tripcode form-control" type="text" placeholder="tripcode" value=" <%= tripcode %>" />

  <div class="checkbox lfloat mtl ptl">
    <label>
      <input type="checkbox" name="newtrip" class="newtrip">new page new trip</input>
    </label>
  </div>

  <div class="checkbox lfloat mtl ptl">
    <label>
      <input type="checkbox" name="use_sidebars" class="use_sidebars">use sidebars</input>
    </label>
  </div>

  <div class="btn btn-primary regen_tripcode rfloat mtl mbl">
    randomize me
  </div>

  <a class="btn btn-warning tripcode_history rfloat mtl mbl mrl" href="#" data-toggle="modal"
      data-target="#benjamin_button">
    benjamin button
  </a>

</div>

