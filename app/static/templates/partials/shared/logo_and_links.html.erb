<% set_default("tripcode", null) %>
<% set_default("hide_settings", false) %>
<% set_default("desaturate", false) %>

<% add_stylesheet("logo_and_links") %>

<div id="logobar" class="clearfix navbar navbar-default" role="navigation">
  <div class="clearfix container">

    <div class="mtl col-md-12 navbar_helper noselect">
      <div class="clearfix" style="text-align: center" >
        <div class="lfloat mrl logo">
        
          <strong><a href="/">
            <img src="/images/atobn.png" 
              style="width: 50px; height: 50px; margin-left: -5px; margin-top: -15px; border-style: none" 
              class="lfloat" />

          </a></strong>

          <div class="identity_tripcode desaturate"></div>
        
        </div>
        <% if (!hide_settings) { %>
          <a class="rfloat settingslink mll" href="#" data-toggle="collapse" data-parent="#settings_dropdown" data-target=".settings">
            <span class='icon-squaresettings'></span>
          </a>
        <% } %>

        <a class="toptop rfloat" href="#" data-toggle="collapse" data-parent="#settings_dropdown" data-target=".favorites_wrapper">
          <span href="#" class='linklink icon-bookmark'></span>
        </a>
      </div>

      <div id="anons">

      </div>


      <div class="clearfix identity_tripcode tripbar desaturate" style="height: 20px; width: 100%" ></div>

      <div id='settings_dropdown'>
        <div class='<%= hide_settings ? "hidden" : ""  %> panel'>
          <%= render_partial("shared/settings.html.erb", { tripcode: tripcode }) %>
        </div>
        <div class='panel'>
          <%= render_partial("shared/favorites.html.erb", { tripcode: tripcode }) %>
        </div>
      </div>

    </div>

  </div>


</div>
